def digitize(n):
    if n < 0:
        return "invalid number"

    if n < 10 and n > 0:
        num_array = [n]
        return num_array

    else:
        num_array = list(map(int, str(n)))
        num_array.reverse()
        return num_array


print("3 => ", digitize(3))

print("27 => ", digitize(27))

print("670 => ", digitize(670))

print("2019 => ", digitize(2019))

print("12345 => ", digitize(12345))


